#!/bin/sh
#
# An example hook script to verify what is about to be committed.
# Called by "git commit" with no arguments.  The hook should
# exit with non-zero status after issuing an appropriate message if
# it wants to stop the commit.
#
# To enable this hook, rename this file to "pre-commit".


BRANCH=$(git branch --show-current)
set -e

if [ "$BRANCH" == "main" ]; then
    flake8 --show-source --statistics --max-line-length 79  src/ tests/
    isort --check-only --profile black --line-length 79  src/ tests/
    black --exclude .+\.ipynb --check --line-length 79 src/ tests/
    pylint --output-format=parseable,parseable:build/code_analysis.stdout,pylint_junit.JUnitReporter:build/reports/linting-python.xml --max-line-length 79  src/ tests/
    pytest --cov=src
    coverage report --fail-under=80
fi
